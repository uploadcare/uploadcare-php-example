{% extends 'base.html.twig' %}

{% block title %}Batch delete result{% endblock %}

{% block body %}
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">{{ result.status }}</h5>

      <ul class="list-unstyled">
        {% for success in result.result %}
          <li>File {{ success.originalFilename }} successfully deleted
          </li>
        {% endfor %}
      </ul>

      {% if result.problems is not empty %}
        <ul class="list-unstyled">
          {% for problem in result.problems %}
            <li>
              Problem with file {{ problem.id }}: {{ problem.reason }}
            </li>
          {% endfor %}
        </ul>
      {% else %}
        <h5 class="card-title">Response has not any problems</h5>
      {% endif %}

    </div>
  </div>
{% endblock %}
