{% extends 'base.html.twig' %}

{% block title %}Project Info{% endblock %}

{% block body %}
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">{{ project.name }}</h5>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">Public key: <code>{{ project.pubKey }}</code></li>
      <li class="list-group-item">Is auto-store enabled: <code>{{ project.autostoreEnabled ? 'True' : 'False' }}</code></li>
      <li class="list-group-item">
        Collaborators:
        {% if project.collaborators is empty %}<code>Empty</code>{% else %}
          {% for cl in project.collaborators %}{{ cl }}{% endfor %}
        {% endif %}
      </li>
    </ul>
  </div>
{% endblock %}
