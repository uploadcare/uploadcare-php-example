{% extends 'base.html.twig' %}
{% block title %}Webhooks list{% endblock %}

{% block body %}
  <ul class="list-group">
    {% for item in data %}
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <div class="flex-grow-1">
          <a class="badge badge-info" href="{{ path('webhooks_info', {'id': item.id}) }}">{{ item.id }}</a>
          <code>{{ item.targetUrl }}</code> from {{ item.created | date }} ({{ item.active ? 'Acitve' : 'Not active' }})
        </div>
        <div class="btn-group" role="group" aria-label="Actions">
          <a href="{{ path('webhook_update', {'id': item.id}) }}" class="btn btn-sm btn-secondary">Update</a>
          <a href="{{ path('delete_webhook', {'id': item.id}) }}" data-method="POST" class="btn btn-sm btn-danger">Delete</a>
        </div>
      </li>
    {% endfor %}
  </ul>
{% endblock %}
